#!/bin/bash

source {{ SCRIPTDIR }}/wod.sh

# Git doesn't collect file rights and we need to have correct ones here so forcing
for d in {{ JUPPROC }}/skel  {{ JUPPRIV }}/skel; do
	if [ -d $d ]; then
		cd $d
		find . -type f | xargs chmod 600
		chmod 700 .ssh
		find .ssh -type f -name '*.pub' | xargs chmod 644
	fi
done
#
cd {{ ANSIBLEDIR }}

ansible-playbook -i inventory --limit {{ PBKDIR }} check_backend.yml
if [ -f {{ ANSIBLEPRIVDIR }}/check_backend.yml ]; then
        ansible-playbook -i inventory $WODANOPT --limit {{ PBKDIR }} {{ ANSIBLEPRIVDIR }}/check_backend.yml
fi
