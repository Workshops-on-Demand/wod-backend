#!/bin/bash

set -x

{{ WODSCRIPTDIR }}/reset-appliance.sh

NAME=sparklab
TMPDIR=/tmp/$NAME.$stdid

# Stop/Remove existing content first - these commands could fail so protect with true from set -e
mkdir -p $TMPDIR
cat > $TMPDIR/stop-compose << EOF
cd $TMPDIR
DOOCKERVER=`docker --version | awk '{print $3}' | cut -d. -f1`
if [ $DOCKERVER -le 20 ]; then
	docker-compose down
else
	docker compose down
fi
EOF

chmod 755 $TMPDIR/stop-compose
ssh -q {{ NOCHECKSSH }} $WODRTARGET sudo mkdir -p $TMPDIR
scp -q {{ NOCHECKSSH }} $TMPDIR/stop-compose $WODRTARGET:$TMPDIR
ssh -q {{ NOCHECKSSH }} $WODRTARGET sudo su - student$stdid -c \'$TMPDIR/stop-compose\' && /bin/true
ssh -q {{ NOCHECKSSH }} $WODRTARGET sudo rm -rf $TMPDIR
exit 0

