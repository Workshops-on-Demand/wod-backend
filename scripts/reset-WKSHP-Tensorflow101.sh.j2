#!/bin/bash

set -x

{{ WODSCRIPTDIR }}/reset-appliance.sh

NAME=tensorflowlab
TMPDIR=/tmp/$NAME.$stdid

# Stop/Remove existing content first - these commands could fail so protect with true from set -e
mkdir -p $TMPDIR
cat > $TMPDIR/stop-compose << EOF
cd $TMPDIR
docker compose down
EOF

chmod 755 $TMPDIR/stop-compose
ssh -q -o StrictHostKeyChecking=no -o UserKnownHostsFile=/dev/null $WODRTARGET mkdir -p $TMPDIR
scp -q -o StrictHostKeyChecking=no -o UserKnownHostsFile=/dev/null $TMPDIR/stop-compose $WODRTARGET:$TMPDIR
ssh -q -o StrictHostKeyChecking=no -o UserKnownHostsFile=/dev/null $WODRTARGET sudo su - student$stdid -c \'$TMPDIR/stop-compose\' && /bin/true
ssh -q -o StrictHostKeyChecking=no -o UserKnownHostsFile=/dev/null $WODRTARGET sudo rm -rf $TMPDIR
exit 0

