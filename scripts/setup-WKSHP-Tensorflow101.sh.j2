#!/bin/bash

#set -x

echo "Prepare the Tensorflow101 container image"

NAME=tensorflowlab

mkdir -p $HOME/$NAME
cd $HOME/$NAME

DCKBASE="tensorflow:latest-jupyter"

cat > Dockerfile << EOF
FROM $DCKBASE
RUN pip install --no-cache-dir vdom==0.5
EOF

# Clean before
docker container prune -f
docker image prune -f
docker rmi $DCKBASE ${NAME}:latest
docker build -t $NAME .
